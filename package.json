{
  "name": "task-diary",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "install-both": "npm i && npm i --prefix client",
    "api": "node server.js",
    "dev:api": "nodemon -r dotenv/config server.js",
    "dev:client": "npm start --prefix client",
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:client\""
  },
  "author": "Andrew Novak",
  "dependencies": {
    "bcrypt": "^5.0.1",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.8.2",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0"
  },
  "devDependencies": {
    "concurrently": "^5.0.2",
    "dotenv": "^8.2.0",
    "nodemon": "^2.0.2"
  }
}
